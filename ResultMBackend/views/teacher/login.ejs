<h3>Teacher Login</h3>
<div class="loginpage">
    <form method="post" class="teachForm">
        <div class="mb-3">
            <label for="password" class="form-label">Password : </label>
            <input type="password" name="password" class="form-control" id="pass" required>
            <br>
            <input type="checkbox" style="width: 30px;" onclick="MyFunction()">Show Password
            <br>
        </div>
        <a><button type="submit" class="btn btncolor btn-primary">Submit</button></a>
    </form>
</div>

<script>
    function MyFunction(){
        var x = document.getElementById("pass");
        if(x.type === "password"){
            x.type = "text";
        }
        else{
            x.type = "password";
        }
    }
</script>